<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/trophiesButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="450dp"
        android:layout_height="35dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorBlueTrophy"
        android:gravity="left"
        android:includeFontPadding="false"
        android:onClick="onClickTrophiesButton"
        android:requiresFadingEdge="none"
        android:text="Trophies:"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/colorGrey"
        android:textIsSelectable="false"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/starsButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="450dp"
        android:layout_height="35dp"
        android:layout_marginTop="68dp"
        android:background="@color/colorGreenStar"
        android:gravity="left"
        android:includeFontPadding="false"
        android:onClick="onClickStarsButton"
        android:requiresFadingEdge="none"
        android:text="Stars:"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/colorGrey"
        android:textIsSelectable="false"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/drawButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="450dp"
        android:layout_height="95dp"
        android:layout_marginBottom="24dp"
        android:background="@color/colorLightBlue"
        android:includeFontPadding="false"
        android:onClick="onClickDrawButton"
        android:requiresFadingEdge="none"
        android:text="Draw !"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/colorGrey"
        android:textIsSelectable="false"
        android:textSize="134sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/leagueImage"
        android:layout_width="294dp"
        android:layout_height="288dp"
        android:onClick="onClickLeagueImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.396"
        app:srcCompat="@drawable/league1" />

    <TextView
        android:id="@+id/leagueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@android:color/black"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="League 1"
        android:textColor="@color/colorLeague1"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leagueImage" />

</android.support.constraint.ConstraintLayout>